<div class="bg-[#D3CFFA] lg:bg-crafted-union1 bg-no-repeat bg-[position:bottom_2%_left_0.5%] bg-[length:auto_30%] relative">
  <div class="lg:bg-crafted-union2 bg-no-repeat bg-[position:top_2%_right_0.5%] bg-[length:auto_30%]">
    <div class="bg-crafted-back bg-no-repeat bg-[position:bottom_left_8%] lg:bg-[position:bottom_left_20%] bg-[length:35%_auto] sm:bg-[length:30%_auto] lg:bg-[length:23%_auto] xl:bg-[length:auto_90%]">
      <div class="lg:w-[70%] py-10 lg:py-16 m-auto px-4 lg:px-0 flex flex-col lg:flex-row gap-20">
        <div class="lg:w-[55%] flex flex-row-reverse order-2 lg:order-1">
          <img src="{{ 'crafted-benefits.svg' | asset_url }}" width="30%" height="auto" alt="Benefits">
        </div>

        <div class="lg:w-[45%] order-1 lg:order-2">
          <div class="mb-6">
            <h2 class="colored-title-violet text-black font-bold text-3xl lg:text-4xl leading-snug uppercase">
              {{ section.settings.title }}
            </h2>
          </div>
          <div class="desc-text text-[0.8rem] text-[#343057] font-light mb-5">
            {{ section.settings.desc }}
          </div>

          <div class="flex flex-row mb-10">
            <div class="flex flex-col justify-center">
              <img
                src="{{ 'best-tasting-sparkles.svg' | asset_url }}"
                width="45"
                height="auto"
                alt="{{ section.settings.title | strip_html }}"
                class="mr-6"
              >
            </div>

            <div class="border-l pl-5 border-[#bab7e2] text-[#343057] text-lg font-light flex flex-col justify-center">
              {{ section.settings.btline }}
            </div>
          </div>

          <div>
            <a
              href="/collections/all"
              class="bg-[#343057] text-center rounded-lg text-[#fff] text-md py-3 px-16 w-full sm:w-auto"
            >
              <span>{{ section.settings.button }}</span>
              <img
                src="{{ 'more-products-icon.svg' | asset_url }}"
                alt="{{ section.settings.button }}"
                width="18"
                height="auto"
                class="inline-block ml-2 mt-[-4px]"
              >
            </a>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

{% schema %}
{
  "name": "Front page: Crafted",
  "tag": "section",
  "limit": 1,
  "settings": [
    {
      "type": "richtext",
      "id": "title",
      "label": "Title"
    },
    {
      "type": "richtext",
      "id": "desc",
      "label": "Description"
    },
    {
      "type": "text",
      "id": "btline",
      "label": "Bottom line"
    },
    {
      "type": "text",
      "id": "button",
      "label": "Button text"
    }
  ]
}
{% endschema %}
