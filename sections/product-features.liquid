{% if product.metafields.custom.feature_items %}
  <div class="py-12 lg:py-16 bg-[#F8F8F8]">
    <div class="w-[80%] m-auto">
      <div>
        <h2 class="colored-title text-black font-bold text-2xl md:text-4xl leading-snug uppercase mb-2 lg:mb-8 md:mb-6 text-center">
          {{ section.settings.title }}
        </h2>
      </div>

      <div class="flex flex-row ext-[0.8rem]">
        <div class="pt-5 text-[0.8rem] text-[#6F6F6F] text-thin leading-5">
          <ul class="flex flex-row flex-wrap justify-between list-disc pl-4 gap-x-5 gap-y-4">
            {% for feature in product.metafields.custom.feature_items.value %}
              <li class="lg:w-[46%]">{{ feature }}</li>
            {% endfor %}
          </ul>
        </div>
      </div>
    </div>
  </div>
{% endif %}

{% schema %}
{
  "name": "Product page: Features",
  "tag": "section",
  "limit": 1,
  "settings": [
    {
      "type": "richtext",
      "id": "title",
      "label": "Title"
    }
  ]
}
{% endschema %}
