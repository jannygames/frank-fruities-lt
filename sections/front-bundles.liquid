<div class="bg-[#F8F8F8] py-16">
  <div class="max-w-[1150px] m-auto flex flex-col min-[1100px]:flex-row justify-around items-center gap-6 mb-10 px-2">
    <div class="text-center w-full md:w-auto">
      <h3 class="colored-title text-black font-bold text-3xl lg:text-4xl leading-snug uppercase text-center lg:text-left">
        {{ section.settings.title }}
      </h3>
    </div>

    <div class="hidden md:flex">
      <a
        href="/collections/all"
        class="bg-[#343057] text-center rounded-lg text-[#fff] text-base lg:text-md py-2 lg:py-3 px-7"
      >
        <span>{{ section.settings.button }}</span>

        <img
          src="{{ 'more-products-icon.svg' | asset_url }}"
          alt="{{ section.settings.button }}"
          width="18"
          height="auto"
          class="inline-block ml-2 mt-[-4px]"
        >
      </a>
    </div>
  </div>

  <div id="bundles" class="flex flex-row gap-5">
    {% for product in collections.kits.products %}
      <div class="min-w-[250px]">
        <div class="mb-3 rounded-lg overflow-hidden">
          <a href="{{ product.url }}">
            {{ product.featured_image | image_url: width: 600 | image_tag: alt: product.title }}
          </a>
        </div>

        <div class="text-[0.8rem] text-center mb-3">
          <a href="{{ product.url }}">{{ product.title }}</a>
        </div>

        <div class="text-[0.8rem] font-semibold text-center">
          <a href="{{ product.url }}">{{ product.price | money }}</a>
        </div>
      </div>
    {% endfor %}
  </div>

  <div class="pt-16 flex md:hidden justify-center">
    <a href="/collections/all" class="bg-[#343057] text-center rounded-lg text-[#fff] text-md py-3 px-12">
      <span>{{ section.settings.button }}</span>
      <img
        src="{{ 'more-products-icon.svg' | asset_url }}"
        alt="{{ section.settings.button }}"
        width="18"
        height="auto"
        class="inline-block ml-2 mt-[-4px]"
      >
    </a>
  </div>
</div>

{% schema %}
{
  "name": "Front page: Bundles",
  "tag": "section",
  "limit": 1,
  "settings": [
    {
      "type": "richtext",
      "id": "title",
      "label": "Title"
    },
    {
      "type": "text",
      "id": "button",
      "label": "Button text"
    }
  ]
}
{% endschema %}
