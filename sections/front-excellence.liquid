<div class="bg-[#FF5E5E] lg:bg-excellence-union1 bg-no-repeat bg-[position:bottom_15%_left_1%] bg-[length:auto_80%]">
  <div class="pt-12 lg:pt-16 flex flex-col lg:bg-excellence-union2 bg-no-repeat bg-[position:top_15%_right_1%] bg-[length:auto_80%]">
    <div class="lg:w-[73%] m-auto px-4 lg:px-0 flex flex-col lg:flex-row gap-16">
      <div class="lg:w-1/2 pb-16 flex flex-col justify-center order-2 lg:order-1">
        <div class="mb-5">
          <h2 class="colored-title-red text-white font-bold text-4xl leading-snug uppercase">
            {{ section.settings.title }}
          </h2>
        </div>

        <div class="desc-text-red text-[0.8rem] font-light text-white">
          {{ section.settings.desc }}
        </div>
      </div>

      <div class="!w-full lg:!w-[1/2] pb-0 lg:pb-16 bg-excellence-back.webp bg-no-repeat lg:bg-contain bg-[position:top_right] lg:bg-[position:bottom_right] bg-[length:30%_auto] order-1 lg:order-2 pt-8 lg:pt-0">
        <img
          src="{{ 'excellence-benefits.svg' | asset_url }}"
          width="65%"
          class="mx-auto w-[65%] max-sm:w-[90%]"
          height="auto"
          alt="Benefits"
        >
      </div>
    </div>
  </div>
</div>

{% schema %}
{
  "name": "Front page: Excellence",
  "tag": "section",
  "limit": 1,
  "settings": [
    {
      "type": "richtext",
      "id": "title",
      "label": "Title"
    },
    {
      "type": "richtext",
      "id": "desc",
      "label": "Description"
    }
  ]
}
{% endschema %}
