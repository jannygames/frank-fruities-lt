      <div class="w-full flex justify-center items-center">
        <img
          src="{{ 'keep-family.png' | asset_url }}"
          alt="Keep your family on track"
          class="w-full h-auto rounded-xl shadow-sm md:max-w-[60%] md:mx-auto lg:w-full lg:mx-0 lg:min-w-[100%]"
          width="800"
          height="600"
