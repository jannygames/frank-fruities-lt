<div class="py-20 px-4 lg:px-0">
  <div class="lg:w-[80%] m-auto pt-12 lg:pt-24">
    <div class="mb-2">
      <h2 class="colored-title text-black font-bold text-3xl lg:text-4xl leading-snug uppercase text-center">
        Mano <strong>paskyra</strong>
      </h2>
    </div>

    <div class="mb-10 lg:mb-16 text-center">
      <a href="{{ routes.account_logout_url }}" class="text-[#656565] text-[0.8rem] font-light">Atsijungti?</a>
    </div>

    <div class="mb-10">
      <div class="mb-5">
        <h2 class="font-semibold text-2xl uppercase leading-snug">Užsakymų istorija</h2>
      </div>
      {% if customer.orders.size > 0 %}
        <div class="font-light">
          <div class="hidden md:flex flex-row justify-start bg-gray-200 py-2 px-4 mb-3 font-semibold">
            <div class="w-[100px]">Užsakymo nr.</div>

            <div class="w-[150px]">Data</div>

            <div class="w-[200px]">Mokėjimo statusas</div>

            <div class="w-[200px]">Įvykdymo statusas</div>

            <div class="w-[100px]">Viso</div>

            <div class="w-[100px]">Veiksmas</div>
          </div>

          {% paginate customer.orders by 15 %}
            {% for order in customer.orders %}
              <div class="flex flex-col md:flex-row justify-start py-2 md:px-4">
                <div class="md:w-[100px]">
                  <label class="font-semibold md:hidden inline">Užsakymo nr.:</label>
                  {{ order.order_number }}
                </div>

                <div class="md:w-[150px]">
                  <label class="font-semibold md:hidden inline">Data:</label>
                  {{ order.created_at | date: '%b %d, %y' }}
                </div>

                <div class="md:w-[200px]">
                  <label class="font-semibold md:hidden inline">Mokėjimo statusas:</label>
                  {{ order.financial_status_label }}
                </div>

                <div class="md:w-[200px]">
                  <label class="font-semibold md:hidden inline">Įvykdymo statusas:</label>
                  {{ order.fulfillment_status_label }}
                </div>

                <div class="md:w-[100px]">
                  <label class="font-semibold md:hidden inline">Viso:</label> {{ order.total_price | money }}
                </div>

                <div class="md:w-[100px]">
                  <a href="{{ order.order_status_url }}" class="text-[#FF5E5E]" target="_blank">Peržiūrėti</a>
                </div>
              </div>
            {% endfor %}
            <div class="pagination lg:w-[20%] m-auto pt-6 uppercase flex flex-row gap-5 justify-center">
              {{- paginate | default_pagination }}
            </div>
          {% endpaginate %}
        </div>
      {% else %}
        Jūs neturite užsakymų.
      {% endif %}
    </div>

    <div>
      <a
        href="{{ routes.account_addresses_url }}"
        class="bg-[#343057] text-center rounded-lg text-[#fff] text-md py-3 px-16 w-full md:w-auto cursor-pointer"
      >
        Peržiūrėti adresus
      </a>
    </div>
  </div>
</div>
