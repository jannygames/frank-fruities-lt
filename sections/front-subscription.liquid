<div class="bg-[#F8F8F8] py-12">
  <div class="sm:w-[70%] md:w-[60%] min-[1250px]:w-[85%] flex flex-col min-[1250px]:flex-row m-auto sm:px-0 px-4">
    <div class="min-[1250px]:w-1/3 flex flex-col justify-center mb-8 min-[1250px]:mb-0">
      <h2 class="colored-title text-black font-bold text-3xl min-[1250px]:text-4xl leading-snug uppercase text-center min-[1250px]:text-left">
        {{ section.settings.title }}
      </h2>
    </div>

    <div class="min-[1250px]:w-2/3 flex flex-col min-[1250px]:flex-row min-[1250px]:gap-10 gap-7">
      <div class="min-[1250px]:w-2/3 flex flex-col justify-center">
        <input
          type="text"
          placeholder="{{ section.settings.placeholder }}"
          class="hidden border border-[#D3D3D3] bg-white rounded-lg text-[#6F6F6F] font-light font-inter text-sm py-3 px-5 focus:outline-none focus-visible:outline-none w-full"
        >
      </div>

      <div class="flex flex-col justify-center flex-shrink sm:items-center">
        <a
          href="/account/register"
          class="bg-[#343057] text-center rounded-lg text-[#fff] text-sm py-3 px-16 sm:w-[17rem]"
        >
          <span>{{ section.settings.button }}</span>
          <img
            src="{{ 'join-icon.svg' | asset_url }}"
            alt="{{ section.settings.button }}"
            width="8"
            height="auto"
            class="inline-block ml-2 mt-[-4px]"
          >
        </a>
      </div>
    </div>
  </div>
</div>

{% schema %}
{
  "name": "Front page: Subscription",
  "tag": "section",
  "limit": 1,
  "settings": [
    {
      "type": "richtext",
      "id": "title",
      "label": "Title"
    },
    {
      "type": "text",
      "id": "placeholder",
      "label": "Placeholder"
    },
    {
      "type": "text",
      "id": "button",
      "label": "Button text"
    }
  ]
}
{% endschema %}
