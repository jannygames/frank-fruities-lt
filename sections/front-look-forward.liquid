<div class="bg-[#FF5E5E] lg:bg-look-forward-union1 bg-no-repeat bg-[position:center_left_2%] bg-[length:auto_80%]">
  <div class="py-14 lg:py-10 flex flex-col lg:bg-look-forward-union2 bg-no-repeat bg-[position:center_right_2%] bg-[length:auto_80%]">
    <div class="w-[70%] m-auto">
      <div class="text-center mb-9 lg:mb-7">
        <h2 class="colored-title-red text-white text-2xl font-bold tracking-wider">
          {{ section.settings.title }}
        </h2>
      </div>

      <div class="flex flex-row gap-10">
        <div class="flex-grow justify-center hidden lg:flex flex-col">
          <div class="bg-white h-[1px] w-full"></div>
        </div>

        <div class="lg:flex-shrink w-full lg:w-auto text-center lg:text-left">
          <a href="/collections/all" class="bg-white text-center rounded-lg text-[#FF5E5E] text-md py-3 px-20">
            <span>{{ section.settings.button }}</span>
            <img
              src="{{ 'look-forward-icon.svg' | asset_url }}"
              alt="{{ section.settings.button }}"
              width="18"
              height="auto"
              class="inline-block ml-2 mt-[-4px]"
            >
          </a>
        </div>
      </div>
    </div>
  </div>
</div>

{% schema %}
{
  "name": "Front page: Look Forward",
  "tag": "section",
  "limit": 1,
  "settings": [
    {
      "type": "richtext",
      "id": "title",
      "label": "Title"
    },
    {
      "type": "text",
      "id": "button",
      "label": "Button text"
    }
  ]
}
{% endschema %}
