<div class="py-20 px-4 lg:px-0">
  <div class="lg:w-[80%] m-auto pt-12 lg:pt-24">
    <div class="mb-10 lg:mb-16">
      <h2 class="colored-title text-black font-bold text-3xl lg:text-4xl leading-snug uppercase text-center">
        <strong>Sign</strong> In
      </h2>
    </div>

    {% form 'customer_login' %}
      <div class="md:w-[70%] lg:w-[50%] m-auto mb-16">
        <div class="mb-10">
          <label for="email" class="font-semibold mb-2 block">E-mail</label>
          <input
            id="email"
            type="email"
            name="customer[email]"
            class="dropdown-options w-full py-2 px-3 bg-white border border-[#D9D9D9] text-slate-800 font-light outline-none"
            required
          >
        </div>

        <div>
          <label for="password" class="font-semibold mb-2 block">Password</label>
          <input
            id="password"
            type="password"
            name="customer[password]"
            class="dropdown-options w-full py-2 px-3 bg-white border border-[#D9D9D9] text-slate-800 font-light outline-none"
            required
          >
          <div class="text-right">
            <a href="#reset-password" class="text-xs">Forgot your password?</a>
          </div>
        </div>

        {% if form.errors %}
          <div class="pt-5 text-sm text-red-600">
            {{ form.errors | default_errors }}
          </div>
        {% endif %}
      </div>

      <div class="text-center">
        <input
          type="submit"
          value="Sign in"
          class="bg-[#343057] text-center rounded-lg text-[#fff] text-md py-3 px-16 w-full md:w-auto cursor-pointer"
        >
      </div>

      <div class="mt-10 text-sm text-center">
        Not registered? <a href="/account/register" class="text-[#FF5E5E]">Register here.</a>
      </div>
    {% endform %}
  </div>

  <div class="w-[30%] pt-28 m-auto">
    <div class="border-t border-[#D9D9D9]"></div>
  </div>

  <div id="reset-password" class="lg:w-[80%] m-auto pt-12 lg:pt-24">
    <div class="mb-10 lg:mb-7">
      <h2 class="colored-title text-black font-bold text-xl lg:text-2xl leading-snug uppercase text-center">
        <strong>Reset</strong> password
      </h2>
    </div>

    {% form 'recover_customer_password' %}
      <div class="md:w-[70%] lg:w-[50%] m-auto mb-10">
        <div class="mb-10">
          <label for="email" class="font-semibold mb-2 block">E-mail</label>
          <input
            id="email"
            type="email"
            name="customer[email]"
            class="dropdown-options w-full py-2 px-3 bg-white border border-[#D9D9D9] text-slate-800 font-light outline-none"
            required
          >
        </div>

        {% if form.errors %}
          <div class="pt-5 text-sm text-red-600">
            {{ form.errors | default_errors }}
          </div>
        {% endif %}
      </div>

      <div class="text-center">
        <input
          type="submit"
          value="Reset password"
          class="bg-[#343057] text-center rounded-lg text-[#fff] text-md py-3 px-16 w-full md:w-auto cursor-pointer"
        >
      </div>
    {% endform %}
  </div>
</div>
