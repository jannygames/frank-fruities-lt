<div class="flex flex-col lg:flex-row">
  <div class="flex flex-row lg:w-[45%] py-10 lg:py-28 px-4 lg:px-0 lg:pr-14 bg-[#D3CFFA] lg:bg-best-tasting-union bg-repeat-y bg-[position:30px_35px] bg-[length:auto_70%] order-2 lg:order-1">
    <div class="hidden lg:flex w-3/12"></div>

    <div class="lg:w-9/12 flex flex-col">
      <div class="mb-6 lg:mb-10">
        <h2 class="colored-title-blue text-black font-bold text-3xl lg:text-4xl leading-snug uppercase">
          {{ section.settings.title }}
        </h2>
      </div>

      <div class="desc-text text-[0.8rem] text-[#343057] font-light mb-9">
        {{ section.settings.desc }}
      </div>

      <div class="flex flex-row mb-12">
        <div class="flex flex-col justify-center">
          <img
            src="{{ 'best-tasting-sparkles.svg' | asset_url }}"
            width="45"
            height="auto"
            alt="That's why"
            class="mr-6"
          >
        </div>

        <div class="border-l pl-5 border-[#bab7e2] text-[#343057] text-lg font-light flex flex-col justify-center">
          {{ section.settings.btline }}
        </div>
      </div>

      <div class="mb-5 lg:mb-0">
        <a
          href="/collections/all"
          class="bg-[#343057] text-center rounded-lg text-[#fff] text-md py-3 px-16 w-full md:w-auto"
        >
          <span>{{ section.settings.button }}</span>
          <img
            src="{{ 'more-products-icon.svg' | asset_url }}"
            alt="{{ section.settings.button }}"
            width="18"
            height="auto"
            class="inline-block ml-2 mt-[-4px]"
          >
        </a>
      </div>
    </div>
  </div>

  <div
    class="lg:w-[55%] bg-[#D3CFFA] bg-best-tasting-product bg-no-repeat bg-cover bg-center order-1 lg:order-2 h-64 lg:h-auto"
  ></div>
</div>

{% schema %}
{
  "name": "Front page: Tasting",
  "tag": "section",
  "limit": 1,
  "settings": [
    {
      "type": "richtext",
      "id": "title",
      "label": "Title"
    },
    {
      "type": "richtext",
      "id": "desc",
      "label": "Description"
    },
    {
      "type": "text",
      "id": "btline",
      "label": "Bottom line"
    },
    {
      "type": "text",
      "id": "button",
      "label": "Button text"
    }
  ]
}
{% endschema %}
