<div class="bg-[#F8F8F8] py-16">
  <div class="lg:w-[80%] m-auto">
    <div class="mb-14">
      <h2 class="colored-title text-black font-bold text-3xl lg:text-4xl leading-snug uppercase mb-6 text-center">
        {{ title }}
      </h2>
    </div>

    <div id="reviews" class="flex flex-col lg:flex-row justify-between gap-8 pb-5">
      {% for block in blocks %}
        <div class="bg-white border border-[#D3D3D3] rounded-lg py-4 px-5">
          <div class="mb-5">
            {% assign rating_image_filename = 'rating-' | append: block.settings.rate | append: '.svg' %}
            <img
              src="{{ rating_image_filename | asset_url }}"
              width="auto"
              height="auto"
              alt="{{ block.settings.rate }} of {{ block.settings.rate }}"
            >
          </div>
          <div class="text-[#0F1113] font-medium text-lg mb-3">{{ block.settings.name }}</div>
          <div class="text-[#6F6F6F] text-sm font-light leading-1">
            {{ block.settings.text }}
          </div>
        </div>
      {% endfor %}
    </div>
  </div>
</div>
